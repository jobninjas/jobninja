generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ResumeDocument {
  id              String   @id @default(cuid())
  userId          String
  originalName    String
  parsedText      String?  @db.Text
  structuredJson  Json?
  createdAt       DateTime @default(now())
  sessions        InterviewSession[]
}

model InterviewSession {
  id              String   @id @default(cuid())
  userId          String
  resumeId        String
  jobDescription  String   @db.Text
  roleTitle       String
  status          String   @default("pending") // pending, active, completed
  questionCount   Int      @default(0)
  targetQuestions Int      @default(10)
  createdAt       DateTime @default(now())
  
  resume          ResumeDocument @relation(fields: [resumeId], references: [id])
  turns           InterviewTurn[]
  report          EvaluationReport?
}

model InterviewTurn {
  id              String   @id @default(cuid())
  sessionId       String
  turnNumber      Int
  questionText    String   @db.Text
  audioQuestionUrl String?
  answerText      String?  @db.Text
  timestamp       DateTime @default(now())
  
  session         InterviewSession @relation(fields: [sessionId], references: [id])
}

model EvaluationReport {
  id              String   @id @default(cuid())
  sessionId       String   @unique
  summary         String   @db.Text
  strengths       String[]
  gaps            String[]
  repetition      Json?
  actionableFixes String[]
  scores          Json?    // {clarity: 8, star: 7, ...}
  rewrittenAnswers Json?   // [{original: "...", improved: "..."}]
  roleFitScore    Int
  createdAt       DateTime @default(now())
  
  session         InterviewSession @relation(fields: [sessionId], references: [id])
}
